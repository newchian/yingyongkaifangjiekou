<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".WangluoPeizhiActivity">

  <TextView
    android:id="@+id/textView3"
    android:layout_width="55dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginLeft="24dp"
    android:text="IP地址："
    app:layout_constraintBottom_toBottomOf="@+id/editIP"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/editIP" />

  <EditText
    android:id="@+id/editIP"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:ems="10"
    android:hint="请键入ip地址"
    android:inputType="textPersonName"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    tools:layout_editor_absoluteY="6dp" />

  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginLeft="24dp"
    android:text="端口号："
    app:layout_constraintBottom_toBottomOf="@+id/editDuankou"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/editDuankou" />

  <EditText
    android:id="@+id/editDuankou"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="24dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:hint="请键入端口号"
    app:layout_constraintEnd_toEndOf="@+id/editIP"
    app:layout_constraintStart_toEndOf="@+id/textView4"
    app:layout_constraintTop_toBottomOf="@+id/editIP" />

  <Button
    android:id="@+id/peizhihao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="好"
    app:layout_constraintEnd_toEndOf="@+id/editDuankou"
    app:layout_constraintTop_toBottomOf="@+id/editDuankou" />

  <TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="@+id/peizhihao"
    app:layout_constraintTop_toBottomOf="@+id/peizhihao" />

</androidx.constraintlayout.widget.ConstraintLayout>